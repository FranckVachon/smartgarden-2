


// d√©finir le broker: rouler en localhost sans gossage de safety

Bridge mqtt:broker:mosquitto [ host="0.0.0.0", secure=false ]
{
    Thing topic mything {
    Channels:
        Type switch : lamp "Kitchen Lamp" [ stateTopic="lamp/enabled", commandTopic="lamp/enabled/set", postCommand="true" ]
        Type string : alarm "Alarm system" [ stateTopic="alarm/panel/state", commandTopic="alarm/panel/set", postCommand="true"]
    }
}
